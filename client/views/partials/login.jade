.container.animated.fadeInDown(ng-cloak)
	.row
		.col-sm-6.col-md-4.col-md-offset-4
			h1.text-center.login-title login
			.account-wall
				img.profile-img(src='/images/user.png', alt='')
				form.form-signin(ng-submit="login()")
					#login-spinner(us-spinner="{radius:5, width:3, length: 5}", ng-hide='!loading')
					#loading(ng-hide='!loading') loading...
					input#username.form-control(ng-model="username", type='text', placeholder='username', required, ng-disabled='loading')
					input#password.form-control(ng-model="password", type='password', placeholder='password', required, ng-disabled='loading')
					button#submit.btn.btn-lg.btn-primary.btn-block(type='submit', ng-disabled='loading') login